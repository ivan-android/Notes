<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF9E80</item>
        <item name="colorPrimaryDark">#035554</item>
        <item name="colorAccent">@color/purple_700</item>

    </style>

    <style name="MyButtonColorStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#4F9F52</item>
        <item name="colorControlHighlight">#80D8FF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>